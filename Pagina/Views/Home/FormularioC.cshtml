@model Entidades.cuenta

@{
    ViewBag.Title = "FormularioC";
}

    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>cuenta</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4>Numero de cuenta:</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cNumero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cNumero, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <h4>Propietario:</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.propietario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.propietario, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <h4>Saldo:</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cSaldo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cSaldo, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
