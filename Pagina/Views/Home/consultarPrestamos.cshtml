@model IEnumerable<Entidades.prestamo>

@{
    ViewBag.Title = "consultarPrestamos";

}

    <table class="table">
        <tr>
            <th>
                <h4>ID</h4>
            </th>
            <th>
                <h4>Cuenta</h4>
            </th>
            <th>
                <h4>Monto</h4>
            </th>
            <th>
                <h4>Monto pagado</h4>
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cuenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.montoPagado)
        </td>
        <td>
            @Html.ActionLink("Pagar", "pagarP", new { id = item.id }) |
            @Html.ActionLink("Historial", "historialPrestamos", new { id = item.id }) |
        </td>
    </tr>
    }
    
    </table>
