@model Entidades.Tcredito

@{
    ViewBag.Title = "FormularioT";
}


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal box">
            <h4>Formulario Tarjetas</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h2>Numero Cuenta</h2>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tnumero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tnumero, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }


<style>

    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        color: white;
        background: linear-gradient(to right, #b92b27, #1565c0)
    }

    .btn {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    a {
        color: white;
    }

    .box h1 {
        color: white;
        text-transform: uppercase;
        font-weight: 300;
        font-size: x-large;
    }

    .box {
        width: 430px;
        height: 40%;
        padding: 40px;
        position: absolute;
        top: 60px;
        left: 35%;
        background: #191919;
        text-align: center;
        transition: 0.25s;
        margin-top: 100px;
    }

        .box input[type="text"],
        .box input[type="number"] {
            border: 0;
            background: none;
            display: block;
            margin: 20px auto;
            text-align: center;
            border: 2px solid #3498db;
            padding: 10px 10px;
            width: 350px;
            outline: none;
            color: white;
            border-radius: 24px;
            transition: 0.75s
        }

        .box input[type="number"] {
            background-color: #191919;
            width: 350px;
        }

        .box h1 {
            color: white;
            text-transform: uppercase;
            font-weight: 500
        }

        .box input[type="text"]:focus,
        .box input[type="number"]:focus,
        .box input[type="password"]:focus {
            border-color: #2ecc71
        }

        .box input[type="submit"] {
            border: 0;
            background: none;
            display: block;
            margin-left: 110px;
            text-align: center;
            border: 2px solid #2ecc71;
            padding: 14px 40px;
            outline: none;
            color: white;
            border-radius: 24px;
            transition: 0.25s;
            cursor: pointer
        }

            .box input[type="submit"]:hover {
                background: #2ecc71
            }
</style>